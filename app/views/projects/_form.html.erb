<%= simple_form_for [@project] do |f| %>
  <%= f.input :title , label_html: {class: 'pull-left'}%>
  <%= f.input :description, label_html: {class: 'pull-left'} %>
  <%= f.input :industry, label_html: {class: 'pull-left'} %>
  <%= f.input :start_date, label_html: {class: 'pull-left'}, as: :date, html5: true %>
  <%= f.input :deadline, label_html: {class: 'pull-left'}, as: :date, html5: true %>
  <%= f.input :expertise_level, collection: ["Research Analyst (less than 2 years experience)", "Research Specialist (more than 2 years experience)"], label_html: {class: 'pull-left'} %>
  <%= f.input :nb_hours, label_html: {class: 'pull-left'} %>
  <%= f.input :nb_tasks, label_html: {class: 'pull-left'} %>
  <% if @project.id == nil %>
    <%= f.submit "add a project", class: "btn btn-primary" %>
    <% else %>
      <%= f.select :manager_id, options_from_collection_for_select(User.where(role: "manager"), 'id', 'email'), :prompt => 'Select a manager' %>
      <%= f.select :expert_id, options_from_collection_for_select(User.where(role: "expert"), 'id', 'email'), :prompt => 'Select an expert' %>
    <%= f.submit "edit project", class: "btn btn-primary" %>
  <% end %>
<% end %>
