<%= simple_form_for [@project] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.input :deadline %>
  <% if @project.id == nil %>
    <%= f.submit "add a project", class: "btn btn-primary" %>
    <% else %>
    <%= f.submit "edit project", class: "btn btn-primary" %>
  <% end %>
<% end %>
