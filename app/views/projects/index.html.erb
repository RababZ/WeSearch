<h1>Projects#index</h1>


<div class="container">
  <% @projects.each do |project| %>
      <div class="row">
        <div class="col-xs-3">
          <p>project_id: <%= project.id  %></p>
        </div>
        <div class="col-xs-3">
          <p>project_title: <%= project.title  %></p>
        </div>
        <div class="col-xs-3">
          <p>client: <%= project.client.email %></p>
        </div>
        <div class="col-xs-3">
          <%= link_to "Project tasks", project_tasks_path(project) %>
        </div>
        <div class="col-xs-3">
          <% if policy(project).edit? %>
            <%= link_to "Edit project", edit_project_path(project.id) %>
          <% end %>
        </div>
        <div class="col-xs-3">
          <% if policy(project).destroy? %>
            <%= link_to "Delete project", project, method: :delete, data: {confirm: 'Are you sure?'} %>
          <% end %>
        </div>
      </div>
<% end  %>
</div>

<% if policy(Project).create? %>
  <%= link_to "New project", new_project_path %>
<% end %>

