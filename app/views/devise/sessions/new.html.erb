<div class="banner" style="background-image: linear-gradient(-225deg, rgba(50,50,50,0.8) 0%, rgba(50,50,50,0.7) 50%), url('https://images.pexels.com/photos/1451448/pexels-photo-1451448.jpeg?auto=compress&cs=tinysrgb&h=650&w=940');">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-sm-offset-3">
                <div class="form-login">
                    <h2>Log in</h2>
                    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="form-inputs">
                        <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, label_html: {class: 'pull-left'} %>
                        <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }, label_html: {class: 'pull-left'} %>
                        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                    </div>
                    <div class="form-actions">
                        <%= f.button :submit, "Log in", class: "btn btn-success" %>
                    </div>
                    <% end %>
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
</div>
