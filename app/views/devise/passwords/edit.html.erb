<div class="banner" style="background-image: linear-gradient(-225deg, rgba(50,50,50,0.8) 0%, rgba(50,50,50,0.7) 50%), url('https://images.unsplash.com/photo-1460925895917-afdab827c52f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1602&q=80');">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-sm-offset-3">
                <div class="form-login">
                    <h2>Change your password</h2>
                    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                    <%= f.error_notification %>
                    <%= f.input :reset_password_token, label_html: {class: 'pull-left'}, as: :hidden %>
                    <%= f.full_error :reset_password_token %>
                    <div class="form-inputs">
                        <%= f.input :password,
                label: "New password",
                required: true,
                autofocus: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" }, label_html: {class: 'pull-left'} %>
                        <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
                    </div>
                    <div class="form-actions">
                        <%= f.button :submit, "Change my password", class: "btn btn-success" %>
                    </div>
                    <% end %>
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
</div>
